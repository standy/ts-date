{
  "name": "ts-date",
  "version": "2.3.3",
  "description": "Typescript Date library",
  "author": {
    "name": "Andrey Mostovoy",
    "email": "mostovoyav@gmail.com"
  },
  "main": "index.js",
  "module": "esm/index.js",
  "typings": "index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "prettify": "prettier --write \"**/*.ts\"",
    "release": "standard-version",
    "github-release": "conventional-github-releaser",
    "coveralls": "npm run coverage && nyc report --reporter=text-lcov | coveralls",
    "coverage": "nyc npm test",
    "test:browser": "cd browser-test && npm run browser && cd ..",
    "test:sauce": "cd browser-test && npm run sauce && cd ..",
    "test": "mocha -r ts-node/register {src,locale}/**/*.test.ts"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^3.0.0",
    "@types/fs-extra": "^8.0.1",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.2",
    "@types/power-assert": "^1.4.29",
    "conventional-github-releaser": "^3.1.2",
    "coveralls": "^3.0.1",
    "fs-extra": "^8.0.1",
    "glob": "^7.1.6",
    "husky": "^4.0.10",
    "mocha": "^6.1.4",
    "nyc": "^15.0.0",
    "power-assert": "^1.4.4",
    "prettier": "^1.16.4",
    "rollup": "^1.31.0",
    "rollup-plugin-multi-input": "^1.0.3",
    "standard-version": "^7.0.1",
    "ts-loader": "^6.0.2",
    "ts-node": "^8.0.2",
    "tslib": "^1.10.0",
    "typescript": "^3.2.4",
    "validate-commit-msg": "^2.12.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test -- --reporter dot",
      "commit-msg": "validate-commit-msg"
    }
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "locale/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.test.ts"
    ],
    "extension": ".ts",
    "require": [
      "ts-node/register"
    ],
    "temp-directory": "./.cache/.nyc_output",
    "reporter": [
      "text"
    ]
  },
  "keywords": [
    "typescript",
    "date",
    "time",
    "valid date",
    "parse",
    "format"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/standy/ts-date.git"
  },
  "bugs": {
    "url": "https://github.com/standy/ts-date/issues"
  }
}
